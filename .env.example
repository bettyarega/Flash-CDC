# ========= Postgres (shared by db + backend) =========
POSTGRES_USER= 
POSTGRES_PASSWORD=
POSTGRES_DB=

# Single source of truth for the backend:
DATABASE_URL=postgresql+psycopg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
DB_SCHEMA=flash

# First run only (creates schema/tables); set to 0 afterwards
RUN_DDL=1

# Optional DB pool tuning
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_PRE_PING=1
DB_APP_NAME=flash-api

# ========= Listener tuning (Salesforce Pub/Sub) =========
HEARTBEAT_SECONDS=60
IDLE_RESET_SECONDS=300
FAIL_FAST_NOT_FOUND=true
FAIL_FAST_AUTH=true

# ========= API/Auth =========
SECRET_KEY=change-me

# ========= Frontend build =========
# UI calls /api; nginx (in the frontend image) proxies /api -> backend:8000
VITE_API_BASE_URL=/api
