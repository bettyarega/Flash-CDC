# .env.example
DATABASE_URL=postgresql+psycopg://flash_app:pass@localhost:5432/flash
DB_SCHEMA=flash
RUN_DDL=0
FAIL_FAST_NOT_FOUND=true   # default true
FAIL_FAST_AUTH=true        # default true


DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_PRE_PING=1
DB_APP_NAME=flash-api
# DB_ECHO_POOL=1   # turn on when debugging pool checkin/out

